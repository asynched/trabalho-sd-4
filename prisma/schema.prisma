// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id() @default(cuid()) @map("user_id")
  name     String
  username String @unique()
  avatar   String
  role     String @default("guest") // guest, student, teacher

  session Session[]
  grade   Int       @default(0)

  githubProfileUrl    String @map("github_profile_url")
  githubApiProfileUrl String @map("github_api_profile_url")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt() @map("updated_at")

  @@map("users")
}

model Session {
  sessionId String @id() @default(cuid()) @map("session_id")
  userId    String @map("user_id")

  user User @relation(fields: [userId], references: [userId])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt() @map("updated_at")

  @@map("sessions")
}
